{% trans_default_domain 'FOSUserBundle' %}
{% if user.firstName is defined %}
{% set user = user|merge({'firstName': ' ' ~ user.firstName}) %}
{% endif %}
{% block subject %}
{%- autoescape false -%}
{{ 'resetting.email.subject'|trans({'%name%': user.firstName | default(""), '%confirmationUrl%': confirmationUrl}) }}
{%- endautoescape -%}
{% endblock %}

{% block body_text %}
{% autoescape false %}
{{ 'resetting.email.message'|trans({'%name%': user.firstName | default(""), '%confirmationUrl%': confirmationUrl}) }}
{% endautoescape %}
{% endblock %}
{% block body_html %}
{% include '@App/Emails/template.html.twig' with {
  content: 'resetting.email.message'|trans({'%name%': user.firstName | default(""), '%confirmationUrl%': confirmationUrl})|nl2br
} %}
{% endblock %}
